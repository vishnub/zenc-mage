<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <MagentoTest_Test>
            <version>0.1.1</version>
        </MagentoTest_Test>
    </modules>
	<!-- test module admin area -->
	<adminhtml>
		<layout>
			<updates>
				<test>
					<file>test.xml</file>
				</test>
			</updates>
		</layout>
		<menu>
			<test>
				<title>Test module</title>
				<sort_order>71</sort_order>
				<children>
					<items>
						<title>Referrer messages</title>
						<sort_order>0</sort_order>
						<action>test/adminhtml_index</action>
					</items>
				</children>
			</test>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<MagentoTest_Test>
							<title>Test module</title>
							<sort_order>10</sort_order>
						</MagentoTest_Test>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<admin>
		<routers>
			<test>
				<use>admin</use>
				<args>
					<module>MagentoTest_Test</module>
					<frontName>test</frontName>
				</args>
			</test>
		</routers>
	</admin>

	<!-- test module frontend area -->
    <frontend>
        <routers>
            <test>
                <use>standard</use>
                <args>
                    <module>MagentoTest_Test</module>
                    <frontName>test</frontName>
                </args>
            </test>
        </routers>
		<layout>
			<updates>
				<test>
					<file>test.xml</file>
				</test>
			</updates>
		</layout>
    </frontend>
	<global>
		<resources>
			<test_read>
				<connection>
					<use>core_read</use>
				</connection>
			</test_read>
			<test_write>
				<connection>
					<use>core_write</use>
				</connection>
			</test_write>
			<test_setup>
				<setup>
					<module>MagentoTest_Test</module>
					<class>MagentoTest_Test_Model_Resource_Setup</class>
				</setup>
			</test_setup>
		</resources>
		<models>
			<test>
				<class>MagentoTest_Test_Model</class>
				<resourceModel>test_mysql4</resourceModel>
			</test>
			<test_mysql4>
				<class>MagentoTest_Test_Model_Mysql4</class>
				<entities>
					<referrer>
						<table>test_referrer</table>
					</referrer>
				</entities>
			</test_mysql4>
		</models>
        <blocks>
            <test>
                <class>MagentoTest_Test_Block</class>
            </test>
        </blocks>
	</global>
</config>