<?xml version="1.0" encoding="UTF-8"?>
<config>    
    <modules>
        <MagentoTest_Test>
            <version>0.1.0</version>
        </MagentoTest_Test>
    </modules>
    <frontend>
        <routers>
            <test>
                <use>standard</use>
                <args>
                    <module>MagentoTest_Test</module>
                    <frontName>test</frontName>
                </args>
            </test>
        </routers>  
		<layout>
			<updates>
				<test>
					<file>test/index.xml</file>
				</test>
			</updates>
		</layout>
    </frontend>
	<global>
        <blocks>
            <test>
                <class>MagentoTest_Test_Block</class>
            </test>
        </blocks>
	</global>
</config>  